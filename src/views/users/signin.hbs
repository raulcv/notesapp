<div class="row">
    <div class="col-lg-4 col-md-6 mx-auto">
        <div class="card mt-4 text-center border-light">
            <div class="card-header">
                <h3>Account Login</h3>
            </div>
            <img src="/img/bernard.jpg" class="rounded-circle mx-auto d.block m-2 logo" alt="The bernard teddy">
            <div class="mb-2 fw-light">
                <span>Go ahead my friend</span>
            </div>
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="mb-3">
                        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
                    </div>

                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Password">
                    </div>
                    <div class="mb-3 d-grid gap-2 col-10 mx-auto">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>