<div class="col-md-4 mx-auto"><!--creando una tarjeta con de 4 columnas, mx-aout:centrado-->
    <div class="card">
    <div class="card-header">
        <h1>New Note</h1>
    </div>
    <div class="card-body">
        <form action="/notes/new-note" method="POST">
            <div class="mb-3"> <!--Para que los imputs o contendio este separado-->
                <input type="text" name="title" class="form-control" placeholder="Title" autofocus> <!--class="form-control": se adecua al tamano de pantalla-->
            </div>
            <div class="mb-3">
                <textarea name="description" class="form-control" placeholder="Description"></textarea>
            </div>
            <div class="mb-3 d-grid">
                <button class="btn btn-primary btn-block" type="submit"><!--btn-primary:color azul, btn-block: acupa todo ancho disponible-->
                    save
                </button>
            </div>
        </form>
    </div>
</div>
</div>